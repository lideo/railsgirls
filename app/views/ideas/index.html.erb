<h1>Listing ideas</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Picture</th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= link_to idea.name, idea %></td>
    <td><%= idea.description %></td>
    <td><%= idea.picture %></td>
    <td>
    
    <div class="btn-group">      
      <%= link_to 'Show', idea, :class =>"btn" %>
      <%= link_to 'Edit', edit_idea_path(idea), :class =>"btn" %>      
      <%= link_to 'Destroy', idea, method: :delete, data: { confirm: 'Are you sure?' }, :id => "", :class =>"btn" %>
    </div>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Idea', new_idea_path, :id => "new-idea", :class => "btn btn-primary" %>

